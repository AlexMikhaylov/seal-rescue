{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022", // Or "commonjs"
    "moduleResolution": "node", // Explicitly set module resolution
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // If plan to use decorators
    "emitDecoratorMetadata": true, // If using reflection with decorators
    "skipLibCheck": true,
    "sourceMap": true, // Enable source maps for debugging
    "declaration": false, // Typically false for applications
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}